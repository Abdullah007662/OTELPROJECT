@model OteLProjectWebUI.Models.Setting.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profil Bilgileri Ve Şifre Güncelleme</h1>
<form method="post">
    <label>Adınız</label>
    <input type="text" class="form-control"  asp-for="Name"/>
    <br />

    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />

    <label>Kullanıcı Adınız</label>
    <input type="text" class="form-control" asp-for="UserName" readonly />
    <br />

    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />

    <label>Şifre</label>
    <input type="text" class="form-control" asp-for="Password" />
    <br />

    <label>Şifre Tekrar</label>
    <input type="text" class="form-control" asp-for="ConfrimPassword" />
    <br />
    <button class=" btn btn-success">Bilgileri Güncelle</button>
</form>

